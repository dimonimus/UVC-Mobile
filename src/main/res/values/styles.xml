<resources>
    <!-- Базовый стиль для приложения -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

    <!-- Стиль для кнопок -->
    <style name="CustomButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#FFFFFF</item> <!-- Белый текст -->
        <item name="android:fontFamily">sans-serif-condensed</item> <!-- Аналог Franklin Gothic -->
        <item name="android:textSize">15sp</item> <!-- Размер текста -->
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_height">40dp</item> <!-- Высота как в WPF -->
    </style>
    <!-- Стиль для Spinner -->
    <style name="CustomSpinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_background</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Стиль для TextView -->
    <style name="CustomTextView">
        <item name="android:background">@drawable/textview_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>